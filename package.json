{
  "name": "valetez-root",
  "version": "1.0.0",
  "description": "Valetez Valet Parking Management System",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "seed": "cd backend && node seed.js",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "clean-win": "rmdir /s /q node_modules backend\\node_modules frontend\\node_modules"
  },
  "keywords": ["valet", "parking", "management", "mern"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
